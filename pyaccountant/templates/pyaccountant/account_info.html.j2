<table class="table">
    <tr>
    <th>Balance</th><td class="text-{% if balance < 0 %}red{% else %}green{% endif %}">{{ balance }}</td>
  </tr>
  <tr>
    <th>Income this month</th><td class="text-green">{{ income }}</td>
  </tr>
  <tr>
    <th>Expenses this month</th><td class="text-red">{{ expenses }}</td>
  </tr>
  <tr>
    <th>Difference this month</th><td class="text-{% if difference < 0 %}red{% else %}green{% endif %}">{{ difference }}</td>
  </tr>
  </table>